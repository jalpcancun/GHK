<?xml version="1.0" encoding="utf-8"?>
<templates id="template" xml:space="preserve">
    <!-- Video Dialog (allows to choose a style and content for a video on the page) -->
    <div t-name="wysiwyg.widget.video" class="o_video_audio_dialog">
        <div class="form-group">
            <div class="videos" style="display:flex;justify-content:space-between;margin-bottom:10px;flex-wrap:wrap;">
                <video class="gum" autoplay="autoplay" muted="muted" playsinline="playsinline" style="width:49%"></video>
                <video class="note-video-input" autoplay="autoplay" playsinline="playsinline" controls="controls" style="width:49%;background: #222;"></video>
            </div>
            <div>
                <button class="note-record-btn btn btn-primary">Start</button>
                <button class="note-record-stop-btn btn btn-primary" disabled="disabled">Stop</button>
                <button class="note-video-play btn btn-primary" disabled="disabled">Play</button>
                <button class="note-video-download btn btn-primary" disabled="disabled">Download</button>
            </div>
        </div>
    </div>
    <div t-name="wysiwyg.widget.audio" class="o_audio_dialog">
        <div class="form-group">
            <div>
                <audio class="recorded" autoplay="autoplay" playsinline="playsinline" controls="controls"></audio>
            </div>
            <div style="margin-top: 20px;margin-left: 10px;">
                <button class="note-record-audio-btn btn btn-primary">Start</button>
                <button class="note-record-stop-btn btn btn-primary" disabled="disabled">Stop</button>
                <button class="note-audio-play btn btn-primary" disabled="disabled">Play</button>
                <button class="note-audio-download btn btn-primary" disabled="disabled">Download</button>
            </div>
        </div>
    </div>
</templates>
